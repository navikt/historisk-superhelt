{
    "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git"
    },
    "files": {
        "includes": ["**", "!!**/dist", "!!**/generated", "!!**/node", "!!**/node_modules", "!!**/target", "!!package-lock.json"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120,
        "trailingNewline": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "jsxQuoteStyle": "double"
        }
    },
    "css": {
        "parser": {
            "cssModules": true
        },
        "formatter": {
            "enabled": true,
            "quoteStyle": "double"
        }
    }
}
